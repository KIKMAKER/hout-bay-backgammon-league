<h2>Members</h2>

<% if @users.empty? %>
  <div class="container text-center p-3">
    <p>No members yetâ€¦</p>
  </div>
<% else %>
  <% @users.each_with_index do |member, index| %>
    <%= link_to edit_admin_user_path(member), class: "leaderboard-card" do %>

      <div class="leaderboard-username">
        <p><%= member.username %></p>
      </div>

      <div class="leaderboard-stats">
        <div>
          <p><%= member.group&.title || "None" %></p>
        </div>

      </div>
    <% end %>
  <% end %>
<% end %>
