<h2>Create Cycle for <%= @group.title %></h2>

<%= form_with model: @cycle, url: admin_group_cycles_path(@group), method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :start_date, "Start Date" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :weeks, "Number of Play Weeks" %>
    <%= f.number_field :weeks, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, "End Date (Including Catch-Up Weeks)" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>

  <%= f.submit "Create Cycle", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Group", admin_group_path(@group), class: "btn btn-secondary" %>
