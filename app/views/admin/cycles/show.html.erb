<div class="p-3">
  <h2 class="mb-3">Cycle <%= @cycle.id %> Matches - <%= @cycle.group.title %></h2>
  <p class="mb-3">
    <%= @cycle.weeks %> weeks: <%= @cycle.start_date.strftime('%d %b %Y') %> - <%= @cycle.end_date.strftime('%d %b %Y') %>

  </p>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="custom-table">Date</th>
        <th class="custom-table">Players</th>
        <th class="custom-table">Score</th>
        <th class="custom-table">Winner</th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td class="custom-table"><%= match.match_date&.strftime("%e %b") || "TBD" %></td>
          <td class="custom-table"><%= match.player1.username %>
            <p>vs.</p>
            <%= match.player2.username %>
          </td>
          <td class="custom-table"><%= match.player1_score || 0 %> - <%= match.player2_score || 0 %></td>
          <td class="custom-table"><%= match.winner ? match.winner.username : "Pending" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
